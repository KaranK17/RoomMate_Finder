<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HousePref"
    android:background="@drawable/back"
    >

    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Housing Preferences"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="516dp" />

    <EditText
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="150dp"
        android:drawableLeft="@drawable/ic_baseline_pin_drop_24"
        android:ems="10"
        android:hint="  State A Location"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="616dp" />

    <EditText
        android:id="@+id/Miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="250dp"
        android:drawableLeft="@drawable/ic_baseline_directions_walk_24"
        android:ems="10"
        android:hint="   Within Miles"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="594dp" />

    <EditText
        android:id="@+id/MinBud"
        android:layout_width="159dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="340dp"
        android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
        android:ems="10"
        android:hint="    Min Budget"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="457dp" />

    <EditText
        android:id="@+id/MaxBud"
        android:layout_width="179dp"
        android:layout_height="50dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="340dp"
        android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
        android:ems="10"
        android:hint="  Max Budget"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="499dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="440dp"
        android:background="#30ff"
        android:text="Room Type"
        android:drawableLeft="@drawable/ic_baseline_bungalow_24"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="521dp" />

    <RadioButton
        android:id="@+id/priv"
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="480dp"
        android:background="#30ff"
        android:text="Private"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-11dp"
        tools:layout_editor_absoluteY="316dp" />

    <RadioButton
        android:id="@+id/studio"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="480dp"
        android:background="#30ff"
        android:text="Studio"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="339dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save2"
        android:layout_width="316dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="SAVE"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="221dp" />
</RelativeLayout>