<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="65sp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="25dp"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="33dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="169dp"
        android:layout_height="47dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="200dp"
        android:background="#30ff"
        android:ems="10"
        android:hint="    Last Name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="167dp"
        android:layout_height="47dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="48dp"
        android:background="#30ff"
        android:ems="10"
        android:hint="   First Name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="102dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        android:background="#30ff"
        android:text="    Gender"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="253dp" />

    <RadioButton
        android:id="@+id/female"
        android:layout_width="123dp"
        android:layout_height="39dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="280dp"
        android:background="#30ff"
        android:buttonTint="#0D47A1"
        android:text="Female"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="253dp" />

    <RadioButton
        android:id="@+id/male"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="280dp"
        android:background="#30ff"
        android:buttonTint="#0D47A1"
        android:text="Male"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="253dp" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="340dp"
        android:background="#30ff"
        android:ems="10"
        android:inputType="date"
        android:textColor="@color/white"
        android:textSize="19dp"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="320dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="340dp"
        android:background="#30ff"
        android:text="DOB(MM/DD/YYYY)"
        android:textColor="@color/white"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="320dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="408dp"
        android:background="#30ff"
        android:text="   I am a "
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="383dp" />

    <RadioButton
        android:id="@+id/student"
        android:layout_width="109dp"
        android:layout_height="44dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="400dp"
        android:background="#30ff"
        android:buttonTint="#311B92"
        android:text="Student"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="403dp" />

    <RadioButton
        android:id="@+id/professional"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="400dp"
        android:background="#30ff"
        android:buttonTint="#0D47A1"
        android:text="Professional"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="402dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="470dp"
        android:background="#30ff"
        android:text=" Searching for Room"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="464dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="460dp"
        android:background="#30ff"
        android:textColor="@color/white"
        android:textOff="No"
        android:textOn="Yes"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="464dp" />

    <EditText
        android:id="@+id/bio"
        android:layout_width="375dp"
        android:layout_height="57dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="510dp"
        android:background="#30ff"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Bio"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:textColor="#0D47A1"
        android:textColorHint="#0D47A1"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="525dp" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/save1"
        android:layout_width="316dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="596dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:text="SAVE"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="582dp" />

    <TextView
        android:id="@+id/demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</RelativeLayout>